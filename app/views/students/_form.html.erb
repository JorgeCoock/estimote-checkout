<%= form_for(@student) do |f| %>

  <%= render "shared/error_messages", :target => @student %>

  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :full_name, autofocus: true, class: "form-control", required: true%>
  </div>

  <div class="form-group">
    <%= f.label :uuid, "UUID" %>
    <%= f.text_field :uuid, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :matricula %>
    <%= f.text_field :student_number, class: "form-control", required: true %>
  </div>

  <button type="submit" class="button-container-in-forms is-save ">Guardar</button>
  <%= link_to "Cancelar", students_path, class: "button-container-in-forms is-cancel"%>
<% end %>
