<h1>Editar Clase: <%= @lesson.name %></h1>

<%= form_for(@lesson) do |f| %>

  <%= render "shared/error_messages", :target => @lesson %>

  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :hour %>
    <%= f.select :hour, HOURS, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :classroom %>
    <%= f.select :classroom, CLASSROOMS, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, @lesson.available_users, :id, :name,{required: true} %>
  </div>

  <button type="submit" class="btn btn-primary btn-block">Guardar</button>
<% end %>

<%= link_to "Volver", lessons_path %>
