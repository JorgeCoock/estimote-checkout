<h3><strong>Asistencias: </strong><%= @lesson.name %></h3>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Total</th>
        <% for i in 0..41 %>
          <th>Clase <%= i+1 %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @lesson.enrolled_students.each do |student| %>
        <tr>
          <td><%= student.student_full_name %></td>
          <td><%= student.assistances.where(is_present: true).count%>
          <% student.assistances.each do |assistance|%>
            <% if assistance.is_present %>
              <td><i class="fa fa-check"/></td>
            <% else %>
              <td><i class="fa fa-times"/></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="back-button-row">
  <%= link_to :back, class: "back-button" do %>
    <i class="fa fa-arrow-left"></i>
    Regresar
  <% end %>
</div>
